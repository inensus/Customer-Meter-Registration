<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launcher_background</item>
    </style>

    <style name="spinnerStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="AppTheme.BottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize|stateAlwaysHidden</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/transparent</item>
    </style>

    <style name="BottomDialogSheetButtons">
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/launcher_gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="TextInputViewAppearance">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">#00000000</item>
    </style>

</resources>
